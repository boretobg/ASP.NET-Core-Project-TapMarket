@using Microsoft.AspNetCore.Identity

@inject SignInManager<IdentityUser> SignInManager
@inject UserManager<IdentityUser> UserManager

@model TapMarket.Models.Customer.ProfileViewModel

@{
    var customer = ViewBag.Customer;
    var listings = ViewBag.Listings;
}


<asp:Content ID="Content1" ContentPlaceHolderID="head" runat="server"></asp:Content>
<asp:Content ID="Content2" ContentPlaceHolderID="ContentPlaceHolder1" runat="server">
    <div class="container">
        <div class="row">
            <div class="col-md-5">
                <div class="card">
                    <div class="card-body">
                        <div class="row">
                            <div class="col">
                                <center>
                                    <h1>@customer.FirstName @customer.LastName</h1>
                                </center>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col">
                                <center>
                                    <h6>@User.Identity.Name</h6>
                                </center>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col">
                                <center>
                                    <img class="card" src="@customer.PictureUrl" width="200" height="200"/>
                                </center>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col">
                                <hr>
                            </div>
                        </div>

                        <div>

                            <div class="col-md-12">
                                <label> <b> Address </b> </label>
                                <div class="form-group">
                                    <asp:TextBox> @customer.Address, @customer.City </asp:TextBox>
                                </div>
                            </div>

                            <div class="col-md-12">
                                <label> <b>Phone Number</b></label>
                                <div class="form-group">
                                    <div class="input-group">
                                        <asp:TextBox> @customer.PhoneNumber </asp:TextBox>
                                    </div>
                                </div>
                            </div>

                            <div class="col-md-12">
                                <div class="form-group">
                                    <a asp-area="Identity" asp-page="/Account/Manage/Index" title="Manage" class="btn btn-lg btn-block btn-warning">Manage account</a>
                                </div>
                            </div>

                        </div>

                    </div>
                </div>

                <a asp-controller="Home" asp-action="Index"><< Back to Home</a><br>
                <br>

            </div>

            <div class="col-md-7">
                <div class="card">
                    <div class="card-body">
                        <div class="row">
                            <div class="col">
                                <center>
                                    <h4> <b> My Listings </b></h4>
                                </center>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col">
                                <table class="table border border-dark border-primary">
                                    <thead class="thead-dark">
                                            
                                    </thead>
                                    <tbody>
                                        @foreach (var listing in listings)
                                        {
                                            <tr>
                                                <th> <img width="160" src="@listing.ImageUrl" /> </th>
                                                <th scope="row"> @listing.Title </th>
                                                <th> $@listing.Price </th>
                                                <th>
                                                    <a href="/Listing/Details?listingId=@listing.Id" class="btn btn-lg btn-block btn-info">View</a>
                                                    <a href="/Listing/Delete?listingId=@listing.Id" class="btn btn-lg btn-block btn-danger" 
                                                       onclick="return confirm('Are you sure you want to delete this listing?')"> Delete </a>
                                                </th>
                                            </tr>
                                        }
                                    </tbody>
                                </table>
                            </div>
                        </div>

                    </div>
                </div>
            </div>
        </div>
    </div>
</asp:Content>