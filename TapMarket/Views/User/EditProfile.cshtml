
<div class="container">
    <div class="row">
        <div class="offset-md-2 col-md-8 col-sm-12">
            <h2 class="heading-margin"> Edit profile </h2>

            <form method="post">
                <div class="form-group">
                    <label>City</label>
                    <input type="text" class="form-control" placeholder="Enter new city">
                </div>
                <div class="form-group">
                    <label>Address</label>
                    <input type="text" class="form-control" placeholder="Enter new address">
                </div>
                <div class="form-group">
                    <label>Phone number</label>
                    <input type="tel" class="form-control" placeholder="Enter new phone number">
                </div>
                <button type="submit" class="btn btn-primary">Confirm</button>
            </form>
        </div>
    </div>
</div>
