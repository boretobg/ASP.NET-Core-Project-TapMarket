@{
    ViewData["Title"] = "Home Page";
}

<div class="text-center">
    <h1 class="display-4">Welcome</h1>
    <form class="display-4">
        <input type="search" name="search">
        <button class="btn-light" type="submit">
            <span style="font-size: 40px; text-align: center;"> Search </span>
        </button>
    </form>

    <h2 style="margin-top:70px">Some recent listings</h2>
</div>

<br />


<div class="card-deck">
    @foreach (var listing in Model)
    {
        <div class="card" style="width: 18rem;">
            <img width="277" height="180" src="@listing.ImageUrl" alt="Listing image">
            <div class="card-body">
                <h5 class="card-title">@listing.Title</h5>
                <p class="card-text"> <b>$@listing.Price </b>- <i>@listing.Condition condition</i></p>
                <a href="#" class="btn btn-primary">Check out</a>
            </div>
        </div>
    }
</div>